<% layout("./layouts/boilerplate") %>
<button id="darkToggle" class="dark-floating">
  üåô
</button>
<style>
  body {
    background:  #f5f5f5;
  }

  /* Header */
  .dashboard-title {
    text-align: center;
    font-weight: 700;
    color: #ff385c;
    margin-bottom: 2rem;
  }

  /* Total Earnings Card */
  .total-earnings-card {
    background: linear-gradient(135deg, #ff385c, #ff5a6f);
    color: white;
    border-radius: 10px;
    padding: 0.8rem;
    text-align: center;
    box-shadow: 0 12px 30px rgba(255,56,92,0.35);
    margin-bottom: 2.5rem;
    animation: pulse 2.5s infinite;
  }

  .total-earnings-card h2 {
    font-weight: 800;
    margin-top: 0.5rem;
  }

  /* Booking Card */
  .booking-card {
    background: #ffffff;
    border-radius: 16px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 8px 22px rgba(0,0,0,0.08);
    transition: transform 0.35s ease, box-shadow 0.35s ease;
    animation: fadeUp 0.6s ease forwards;
    opacity: 0;
  }

  .booking-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 36px rgba(255,56,92,0.25);
  }

  .listing-title {
    font-size: 1.2rem;
    font-weight: 700;
    color: #222;
    margin-bottom: 0.6rem;
  }

  .guest-name {
    color: #555;
    margin-bottom: 0.8rem;
  }

  .dates {
    display: flex;
    justify-content: space-between;
    margin-top: 1rem;
    font-size: 0.9rem;
    color: #666;
  }

  .status-badge {
    background: #e6fff1;
    color: #28a745;
    padding: 0.4rem 0.8rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-top: 1rem;
    display: inline-block;
  }

  /* Animations */
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.04); }
    100% { transform: scale(1); }
  }
.dark-floating {
  position: fixed;
  bottom: 25px;
  right: 25px;
  width: 55px;
  height: 55px;
  border-radius: 50%;
  background: #111;
  color: #fff;
  border: none;
  font-size: 22px;
  cursor: pointer;
  box-shadow: 0 10px 25px rgba(0,0,0,0.35);
  transition: all 0.3s ease;
  z-index: 9999;
}

.dark-floating:hover {
  transform: scale(1.1);
}

/* dark mode active */
body.dark .dark-floating {
  background: #fff;
  color: #111;
}
</style>
<div class="container mt-4">
  <h2 class="dashboard-title">üè° Host Dashboard</h2>

  <!-- TOTAL EARNINGS -->
  <div class="total-earnings-card">
    <h4>Total Earnings</h4>
    <h2>‚Çπ <%= totalEarnings.toLocaleString("en-IN") %></h2>
  </div>

  <% if (bookings.length === 0) { %>
    <p class="text-center text-muted">
      No bookings on your listings yet.
    </p>
  <% } %>

  <div class="row">
    <% bookings.forEach((b, index) => { %>
      <div class="col-md-6 col-lg-4" style="animation-delay:<%= index * 0.1 %>s">
        <div class="booking-card">

          <div class="listing-title">
            <%= b.listing.title %>
          </div>

          <div class="guest-name">
            üë§ <strong>Guest:</strong> <%= b.user.username %>
          </div>

          <div class="dates">
            <span>üìÖ <%= b.checkIn.toDateString() %></span>
            <span>‚û° <%= b.checkOut.toDateString() %></span>
          </div>

          <span class="status-badge">ACTIVE</span>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<script>
const btn = document.getElementById("darkToggle");
if (localStorage.getItem("darkMode") === "on") {
  document.body.classList.add("dark");
  btn.innerText = "‚òÄ";
}
btn.addEventListener("click", () => {
  document.body.classList.toggle("dark");
  if (document.body.classList.contains("dark")) {
    localStorage.setItem("darkMode", "on");
    btn.innerText = "‚òÄ";
  } else {
    localStorage.setItem("darkMode", "off");
    btn.innerText = "üåô";
  }
});
</script>
