  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(120deg, #0f2027, #203a43, #2c5364);
  animation: bgMove 8s infinite alternate;
}

@keyframes bgMove {
  0% { background-position: left; }
  100% { background-position: right; }
}

.founder-card {
