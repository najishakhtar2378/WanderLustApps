<% layout("./layouts/boilerplate") %>
<style>
  /* ðŸ”¥ GLOBAL PAGE TRANSITION */
body.global-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #fdfbfb, #ebedee);
  animation: reveal 0.8s cubic-bezier(0.25, 0.8, 0.25, 1) both;
  overflow-x: hidden;
}

/* Cinematic fade + lift */
@keyframes reveal {
  0% {
    opacity: 0;
    transform: translateY(20px) scale(0.97);
    filter: blur(6px);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
    filter: blur(0);
  }
}

/* Floating gradient blobs */
body.global-page::before,
body.global-page::after {
  content: "";
  position: fixed;
  inset: 0;
  z-index: -1;
  pointer-events: none;
}

body.global-page::before {
  background:
    radial-gradient(circle at 15% 20%, rgba(255,56,92,0.18), transparent 45%),
    radial-gradient(circle at 85% 80%, rgba(0,0,0,0.06), transparent 40%);
  animation: floatBg 14s ease-in-out infinite alternate;
}

body.global-page::after {
  background:
    radial-gradient(circle at 70% 30%, rgba(0,123,255,0.12), transparent 45%);
  animation: floatBg 18s ease-in-out infinite alternate-reverse;
}

@keyframes floatBg {
  from { transform: translateY(0); }
  to { transform: translateY(-40px); }
}

/* Notifications Container */
.notification-container {
  max-width: 500px;
  margin: auto;
}

/* Notification Card */
.notification-card {
  border-radius: 14px;
  height: 80%;
  border: 1px solid #e5e7eb;
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  overflow: hidden;
}

/* Hover Effect */
.notification-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 28px rgba(0, 0, 0, 0.1);
}

/* Unread Notification */
.notification-card.unread {
  border-left: 8px solid #ff385c;
  background: hwb(300 81% 2%);
}

/* Notification Icon */
.notification-icon {
  font-size: 1.8rem;
  color: #ff385c;
}

/* Notification Text */
.notification-text {
  font-size: 1rem;
  color: #374151;
}

/* Time (optional future use) */
.notification-time {
  font-size: 0.85rem;
  color: hsl(218, 95%, 49%);
}

/* View Button */
.notification-btn {
  border-radius: 20px;
  padding: 6px 14px 8px;
  font-size: 1rem;
}
.notification-button {
  border-radius: 15px;
  background-color: bisque;
  padding: 2px 10px 3px;
  font-size: 1rem;
}
</style>
<body class="global-page">
<div class="container mt-5 notification-container">
  <h3 class="mb-4 fw-bold">ðŸ”” Notifications</h3>

  <% if (notifications.length === 0) { %>
    <p class="text-muted text-center">No notifications yet</p>
  <% } %>

  <% for (let n of notifications) { %>
    <div class="card mb-3 notification-card <%= n.isRead ? '' : 'unread' %>">
      <div class="card-body d-flex align-items-start gap-3">

        <!-- Icon -->
        <div class="notification-icon">
        </div>

        <!-- Content -->
        <div class="flex-grow-1">
          <p class="notification-text mb-1"><%= n.message %></p>
          
          <% if (n.createdAt) { %>
            <span class="notification-time">
              <%= new Date(n.createdAt).toDateString() %>
            </span>
          <% } %>
        </div>

        <!-- Action -->
        <a href="<%= n.link %>" class="btn btn-outline-dark notification-btn">
          View
        </a>
      </div>
      <form action="/notifications/<%= n._id %>?_method=DELETE" method="POST">
         <button class="notification-button" type="submit">DeleteðŸ””</button>
       </form>
    </div>
  <% } %>
</div>
</body>
