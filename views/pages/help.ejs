<% layout("./layouts/boilerplate") %>
<style>
  /* Animated gradient background */
body {
  background: linear-gradient(
    -45deg,
    #6a11cb,
    #2575fc,
    #43cea2,
    #185a9d
  );
  background-size: 400% 400%;
  animation: gradientBG 15s ease infinite;
}

/* Container */
.help-container {
  max-width: 900px;
  margin: 70px auto;
  padding: 40px;
  background: rgba(255,255,255,0.96);
  border-radius: 22px;
  box-shadow: 0 30px 60px rgba(0,0,0,0.08);
  animation: fadeIn 1s ease forwards;
}

/* Heading */
.help-container h1 {
  font-size: 40px;
  position: relative;
}

.help-container h1::after {
  content: "";
  width: 0;
  height: 4px;
  background: #2575fc;
  position: absolute;
  left: 0;
  bottom: -10px;
  animation: underline 1s ease forwards;
  animation-delay: 0.4s;
}

.subtitle {
  color: #666;
  margin: 20px 0 40px;
  opacity: 0;
  animation: slideUp 0.8s ease forwards;
  animation-delay: 0.3s;
}

/* Sections */
section {
  margin-bottom: 28px;
  padding: 25px;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 12px 30px rgba(0,0,0,0.05);
  opacity: 0;
  transform: translateY(30px);
  animation: slideUp 0.8s ease forwards;
}

section h2 {
  color: #2575fc;
  margin-bottom: 10px;
}

section ul li {
  margin: 8px 0;
  color: #444;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes underline {
  to { width: 150px; }
}

@keyframes gradientBG {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

</style>
