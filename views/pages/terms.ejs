<% layout("./layouts/boilerplate") %>
<style>
  /* Animated background */
body {
  background: linear-gradient(
    -45deg,
    #ff385c,
    #ff7a18,
    #ffd194,
    #fff1eb
  );
  background-size: 400% 400%;
  animation: gradientBG 14s ease infinite;
}

/* Main container */
.terms-container {
  max-width: 900px;
  margin: 70px auto;
  padding: 35px;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20px;
  backdrop-filter: blur(6px);
  box-shadow: 0 30px 60px rgba(0,0,0,0.08);
  animation: fadeIn 1s ease forwards;
}

/* Heading */
.terms-container h1 {
  font-size: 38px;
  position: relative;
  margin-bottom: 6px;
}

/* Animated underline */
.terms-container h1::after {
  content: "";
  width: 0;
  height: 4px;
  background: #ff385c;
  position: absolute;
  left: 0;
  bottom: -10px;
  animation: underline 1s ease forwards;
  animation-delay: 0.5s;
}

.updated {
  color: #666;
  margin-bottom: 35px;
  opacity: 0;
  animation: slideUp 0.8s ease forwards;
  animation-delay: 0.3s;
}

/* Sections as cards */
section {
  margin-bottom: 30px;
  padding: 25px;
  border-radius: 16px;
  background: #fff;
  box-shadow: 0 12px 30px rgba(0,0,0,0.05);
  opacity: 0;
  transform: translateY(30px);
  animation: slideUp 0.8s ease forwards;
}

/* Stagger animation */
section:nth-of-type(1)  { animation-delay: 0.4s; }
section:nth-of-type(2)  { animation-delay: 0.6s; }
section:nth-of-type(3)  { animation-delay: 0.8s; }
section:nth-of-type(4)  { animation-delay: 1s; }
section:nth-of-type(5)  { animation-delay: 1.2s; }
section:nth-of-type(6)  { animation-delay: 1.4s; }
section:nth-of-type(7)  { animation-delay: 1.6s; }
section:nth-of-type(8)  { animation-delay: 1.8s; }
section:nth-of-type(9)  { animation-delay: 2s; }
section:nth-of-type(10) { animation-delay: 2.2s; }
section:nth-of-type(11) { animation-delay: 2.4s; }
section:nth-of-type(12) { animation-delay: 2.6s; }
section:nth-of-type(13) { animation-delay: 2.8s; }
section:nth-of-type(14) { animation-delay: 3s; }

/* Hover effect */
section:hover {
  transform: translateY(-6px);
  box-shadow: 0 25px 45px rgba(0,0,0,0.08);
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes underline {
  to { width: 160px; }
}

@keyframes gradientBG {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

</style>
