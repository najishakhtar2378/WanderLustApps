<% layout("./layouts/boilerplate") %>
<style>
/* Animated gradient background */
body {
  background: linear-gradient(
    -45deg,
    #ff385c,
    #ff7a18,
    #ffd194,
    #fff1eb
  );
  background-size: 400% 400%;
  animation: gradientBG 14s ease infinite;
}

/* Container */
.careers-container {
  max-width: 900px;
  margin: 70px auto;
  padding: 40px;
  background: rgba(255,255,255,0.95);
  border-radius: 22px;
  box-shadow: 0 30px 60px rgba(0,0,0,0.08);
  animation: fadeIn 1s ease forwards;
}

/* Heading */
.careers-container h1 {
  font-size: 40px;
  position: relative;
}

.careers-container h1::after {
  content: "";
  width: 0;
  height: 4px;
  background: #ff385c;
  position: absolute;
  left: 0;
  bottom: -10px;
  animation: underline 1s ease forwards;
  animation-delay: 0.4s;
}

.subtitle {
  color: #666;
  margin: 20px 0 40px;
  opacity: 0;
  animation: slideUp 0.8s ease forwards;
  animation-delay: 0.3s;
}

/* Sections */
section {
  margin-bottom: 30px;
  padding: 25px;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 12px 30px rgba(0,0,0,0.05);
  opacity: 0;
  transform: translateY(30px);
  animation: slideUp 0.8s ease forwards;
}

/* Job cards */
.job-card {
  padding: 18px;
  border-radius: 14px;
  background: #f9f9f9;
  margin-top: 15px;
  transition: 0.3s ease;
}

.job-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 15px 30px rgba(0,0,0,0.08);
}

.job-card h3 {
  margin-bottom: 5px;
  color: #ff385c;
}

.job-card span {
  font-size: 14px;
  color: #666;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes underline {
  to { width: 180px; }
}

@keyframes gradientBG {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

</style>
